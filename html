<h1>üíñ How's Your Day? üíñ</h1>
<input type="text" id="jawaban" placeholder="Type your answer...">
<button onclick="kirimJawaban()">Send</button>

<p id="respon"></p>

<script>
    const scriptURL = "PASTE_URL_WEB_APP_DISINI"; // ganti dengan URL dari Google Apps Script

    function kirimJawaban() {
        let jawaban = document.getElementById("jawaban").value;
        if (jawaban.trim() === "") {
            alert("Please type something!");
            return;
        }
        
        fetch(scriptURL, {
            method: 'POST',
            body: JSON.stringify({ jawaban: jawaban })
        })
        .then(response => {
            document.getElementById("respon").innerHTML = "üéâ Thanks for your answer! üéâ";
            document.getElementById("jawaban").value = "";
        })
        .catch(error => {
            document.getElementById("respon").innerHTML = "‚ùå Failed to send, try again.";
            console.error(error);
        });
    }
</script>

